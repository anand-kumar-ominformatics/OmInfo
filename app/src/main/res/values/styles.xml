<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_main</item>
        <item name="colorPrimaryDark">@color/color_main</item>
        <item name="colorAccent">@color/color_main</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>//TODO - added for blank screen
    </style>

    <style name="Editext.Theme" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/_12sp</item>
        <item name="colorAccent">@color/light_grey</item>
        <item name="android:textColor">@color/back_text_colour</item>
        <item name="android:textColorHint">@color/light_grey_10</item>
        <!--<item name="android:fontFamily">@font/poppins_bold</item>-->
        <item name="colorPrimary">@color/light_grey</item>
        <item name="colorPrimaryDark">@color/light_grey</item>
    </style>
    <style name="EditTextPIN4Digit" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">@dimen/_40dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="fontFamily">@font/gilroy_regular</item>
        <item name="android:maxLength">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:focusable">false</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">numberPassword</item>
        <item name="android:singleLine">true</item>
        <item name="errorTextColor">@color/deep_red</item>
        <item name="android:textColor">@color/back_text_colour</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:theme">@style/EditTextBseLine</item>
    </style>
    <style name="EditTextBseLine" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/back_text_colour</item>
        <item name="colorControlActivated">@color/color_main</item>
        <item name="colorControlHighlight">@color/color_main</item>
    </style>
    <style name="AppSearchView" parent="Widget.AppCompat.SearchView" >
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/_14sp</item>
    </style>


    <!-- Base application theme. -->
    <style name="AppThemeBackground" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_main</item>
        <item name="colorAccent">@color/color_main</item>
        <item name="android:windowBackground">@drawable/bg_login_</item>
    </style>

    <!-- Style For Custom Dialog -->
    <style name="ThemeDialogCustom">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="AppTheme.White" parent="AppTheme">
        <!--Required Api 21 above-->
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">@color/color_main</item>
        <item name="colorPrimaryDark">@color/color_main</item>
        <item name="colorAccent">@color/color_main</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!--  <item name="android:windowBackground">@drawable/get_started_theme</item>-->
    </style>


    <style name="AppTheme.FullScreen" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="CustomTextAppearanceTab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_16sp</item>
    </style>

