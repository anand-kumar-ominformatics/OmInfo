<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/_10dp"
    android:layout_below="@+id/toolbar_layout"
    android:background="@color/white"
    android:focusable="true"
    android:padding="@dimen/_10dp"
    android:focusableInTouchMode="true"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_16dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvGadiNo"
            android:layout_width="@dimen/_80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/gilroy_semibold"
            android:gravity="left"
            android:text="@string/scr_lbl_date"
            android:textColor="@color/back_text_colour"
            android:textSize="@dimen/_14sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvGadiNoColon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tvGadiNo"
            android:fontFamily="@font/gilroy_semibold"
            android:text="  :   "
            android:textColor="@color/back_text_colour"
            android:textSize="@dimen/_14sp" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/dateValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvGadiNoColon"
            android:background="@drawable/toggle_editext_color"
            android:fontFamily="@font/gilroy_semibold"
            android:gravity="start"
            android:hint="@string/scr_lbl_lr_date"
            android:inputType="text"
            android:padding="10dp"
            android:text="2021/10/08"
            android:textSize="@dimen/_14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_16dp"
        android:layout_marginTop="@dimen/_16dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvVehNo"
            android:layout_width="@dimen/_80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/gilroy_semibold"
            android:gravity="left"
            android:text="@string/scr_lbl_vehicle_no"
            android:textColor="@color/back_text_colour"
            android:textSize="@dimen/_14sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvVehNoColon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tvVehNo"
            android:fontFamily="@font/gilroy_semibold"
            android:text="  :   "
            android:textColor="@color/back_text_colour"
            android:textSize="@dimen/_14sp" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40dp"
            android:layout_toRightOf="@+id/tvVehNoColon"
            android:background="@drawable/toggle_editext_color"
            android:fontFamily="@font/gilroy_semibold"
            android:gravity="start"
            android:inputType="text"
            android:textSize="@dimen/_14sp"
            app:boxBackgroundColor="#FFF"
            app:boxCornerRadiusBottomEnd="@dimen/_10dp"
            app:boxCornerRadiusBottomStart="@dimen/_10dp"
            app:boxCornerRadiusTopEnd="@dimen/_10dp"
            app:boxCornerRadiusTopStart="@dimen/_10dp"
            app:boxStrokeColor="#FFF"
            app:hintEnabled="false"
            app:hintTextAppearance="@style/Editext.Theme"
            app:placeholderTextAppearance="@style/Editext.Theme">

            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:id="@+id/vehicleNoValue"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40dp"
                android:background="@drawable/toggle_editext_color"
                android:backgroundTint="@android:color/transparent"
                android:clickable="true"
                android:editable="true"
                android:ellipsize="start"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:fontFamily="@font/gilroy_semibold"
                android:hint="@string/scr_lbl_vehicle_no"
                android:imeOptions="actionDone"
                android:inputType="textAutoComplete"
                android:maxLines="3"
                android:paddingVertical="@dimen/_1dp"
                android:textColor="@color/back_text_colour"
                android:textSize="@dimen/_14sp" />
        </com.google.android.material.textfield.TextInputLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_16dp"
        android:layout_marginTop="@dimen/_16dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/pdsText"
            android:layout_width="@dimen/_80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/gilroy_semibold"
            android:gravity="left"
            android:text="PDS No."
            android:textColor="@color/back_text_colour"
            android:textSize="@dimen/_14sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/psdColon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/pdsText"
            android:fontFamily="@font/gilroy_semibold"
            android:text="  :   "
            android:textColor="@color/back_text_colour"
            android:textSize="@dimen/_14sp" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40dp"
            android:layout_toRightOf="@+id/psdColon"
            android:background="@drawable/toggle_editext_color"
            android:fontFamily="@font/gilroy_semibold"
            android:gravity="start"
            android:inputType="text"
            android:textSize="@dimen/_14sp"
            app:boxBackgroundColor="#FFF"
            app:boxCornerRadiusBottomEnd="@dimen/_10dp"
            app:boxCornerRadiusBottomStart="@dimen/_10dp"
            app:boxCornerRadiusTopEnd="@dimen/_10dp"
            app:boxCornerRadiusTopStart="@dimen/_10dp"
            app:boxStrokeColor="#FFF"
            app:hintEnabled="false"
            app:hintTextAppearance="@style/Editext.Theme"
            app:placeholderTextAppearance="@style/Editext.Theme">

            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:id="@+id/psdNoTV"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40dp"
                android:background="@drawable/toggle_editext_color"
                android:backgroundTint="@android:color/transparent"
                android:clickable="true"
                android:editable="true"
                android:ellipsize="start"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:fontFamily="@font/gilroy_semibold"
                android:hint="PDS No."
                android:imeOptions="actionDone"
                android:inputType="textAutoComplete"
                android:maxLines="3"
                android:paddingVertical="@dimen/_1dp"
                android:textColor="@color/back_text_colour"
                android:textSize="@dimen/_14sp" />
        </com.google.android.material.textfield.TextInputLayout>

    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/getLRBTN"
        android:layout_marginHorizontal="@dimen/_16dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40dp"
        android:layout_marginTop="@dimen/_18dp"
        android:layout_gravity="bottom|center"
        android:visibility="visible"
        android:background="@drawable/bg_button_round_corner_5"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:paddingTop="@dimen/_2dp"
        android:text="GET LR"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sp" />


    <RelativeLayout
        android:layout_marginTop="@dimen/_10dp"
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/messageText"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroy_semibold"
            android:layout_centerInParent="true"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/black"
            android:text="Data not found"
            android:textSize="@dimen/_18sp" />

        <LinearLayout
            android:orientation="vertical"
            android:visibility="visible"
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gilroy_bold"
                android:text="LR's Pending for Capture"
                android:textColor="@color/color_main"
                android:textSize="@dimen/_16sp" />
            <View
                android:layout_marginTop="@dimen/_3dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_main"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_shape_without_fill_thin_grey_test">

                <RelativeLayout
                    android:layout_marginVertical="@dimen/_10dp"
                    android:layout_marginHorizontal="@dimen/_15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvDriverBhatta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/gilroy_bold"
                        android:text="LR No."
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sp"
                        android:visibility="visible" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvDriverBhatta11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/gilroy_semibold"
                        android:text="Uploaded On"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sp"
                        android:visibility="visible" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.2dip"
                    android:background="@color/light_grey"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/imageAndCameraRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_16dp"
                    android:focusable="false"
                    android:visibility="visible"
                    android:focusableInTouchMode="false"
                    android:nestedScrollingEnabled="true"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/row_upload_psd_list" />



            </androidx.appcompat.widget.LinearLayoutCompat>


        </LinearLayout>

    </RelativeLayout>




</androidx.appcompat.widget.LinearLayoutCompat>
