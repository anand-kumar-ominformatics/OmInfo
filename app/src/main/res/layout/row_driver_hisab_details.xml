<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/layHeaderToolbar"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginHorizontal="@dimen/_16dp"
android:layout_marginBottom="@dimen/_20dp"
android:gravity="center_horizontal"
android:orientation="horizontal"
android:weightSum="3">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvHisabName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:gravity="left"
        android:onClick="onClick"
        android:layout_weight="1"
        android:fontFamily="@font/gilroy_bold"
        android:paddingTop="@dimen/_5dp"
        android:text="कांटा चिट्ठी वजन"
        android:textColor="@color/back_text_colour"
        android:textSize="@dimen/_16sp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="@dimen/_3dp"
        android:fontFamily="@font/gilroy_semibold"
        android:gravity="right"
        android:paddingTop="@dimen/_5dp"
        android:text="₹ 200"
        android:layout_weight="1"
        android:textColor="@color/back_text_colour"
        android:textSize="@dimen/_14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgFinalAmout"
            android:layout_width="@dimen/_18dp"
            android:layout_height="@dimen/_18dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_complaint_black" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTotalFineChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_toRightOf="@+id/imgFinalAmout"
            android:layout_weight="1"
            android:fontFamily="@font/gilroy_semibold"
            android:gravity="right"
            android:paddingTop="@dimen/_5dp"
            android:text="₹ 200"
            android:textColor="@color/green"
            android:textSize="@dimen/_14sp" />

    </RelativeLayout>



</androidx.appcompat.widget.LinearLayoutCompat>