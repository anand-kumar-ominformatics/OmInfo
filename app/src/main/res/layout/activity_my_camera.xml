<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_round_dialog"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/_16dp"
    android:paddingVertical="@dimen/_50dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_marginTop="@dimen/_10dp"
        android:orientation="vertical"
        android:id="@+id/cameraLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_180dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/podImage1"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:visibility="gone"
                android:layout_centerInParent="true"/>

            <FrameLayout
                android:padding="@dimen/_5dp"
                android:id="@+id/container1"
                android:layout_height="match_parent"
                android:layout_width="match_parent">

                <androidx.camera.view.PreviewView
                    android:id="@+id/previewView1"
                    android:focusableInTouchMode="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </FrameLayout>

        </RelativeLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_gravity="right"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/retakePhoto1"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_width="@dimen/_45dp"
                android:layout_height="@dimen/_45dp"
                android:background="@drawable/rotate_arrow"
                android:fontFamily="@font/gilroy_semibold"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginRight="@dimen/_20dp"
                android:paddingTop="@dimen/_2dp"
                android:textAllCaps="false"
                android:textColor="@color/color_main"
                android:textSize="@dimen/_14sp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/capturePhoto1"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_width="@dimen/_45dp"
                android:layout_height="@dimen/_45dp"
                android:background="@drawable/ic_camera_with_card"
                android:fontFamily="@font/gilroy_semibold"
                android:gravity="center"
                android:paddingTop="@dimen/_2dp"
                android:textAllCaps="false"
                android:textColor="@color/color_main"
                android:textSize="@dimen/_14sp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>