<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shape_round_dialog"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/_16dp"
    android:paddingVertical="@dimen/_16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gilroy_bold"
                android:gravity="left"
                android:text="LR No. : "
                android:textColor="@color/color_main"
                android:textSize="@dimen/_16sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lrNoValue"
                android:fontFamily="@font/gilroy_bold"
                android:gravity="left"
                android:text="34343"
                android:textColor="@color/color_main"
                android:textSize="@dimen/_16sp" />

        </androidx.appcompat.widget.LinearLayoutCompat>




        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgCancel"
            android:layout_width="@dimen/_16dp"
            android:layout_height="@dimen/_16dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_close" />

    </RelativeLayout>



    <View
        android:layout_marginTop="@dimen/_5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_grey"/>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_marginTop="@dimen/_10dp"
        android:orientation="vertical"
        android:id="@+id/cameraLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="@dimen/_80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/gilroy_semibold"
            android:gravity="left"
            android:text="Photo 1"
            android:textColor="@color/back_text_colour"
            android:textSize="@dimen/_14sp" />

        <RelativeLayout
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_180dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/podImage1"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:visibility="gone"
                android:layout_centerInParent="true"/>

            <FrameLayout
                android:padding="@dimen/_5dp"
                android:id="@+id/container1"
                android:layout_height="match_parent"
                android:layout_width="match_parent">

                <androidx.camera.view.PreviewView
                    android:id="@+id/previewView1"
                    android:focusableInTouchMode="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </FrameLayout>


            <ProgressBar
                android:visibility="gone"
                android:id="@+id/progress1"
                android:layout_width="@dimen/_40dp"
                android:layout_height="@dimen/_40dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center" />



        </RelativeLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/retakePhoto1"

                android:layout_marginTop="@dimen/_10dp"
                android:layout_width="@dimen/_45dp"
                android:layout_height="@dimen/_45dp"
                android:background="@drawable/rotate_arrow"
                android:fontFamily="@font/gilroy_semibold"
                android:gravity="center"
                android:visibility="visible"
                android:paddingTop="@dimen/_2dp"
                android:textAllCaps="false"
                android:textColor="@color/color_main"
                android:textSize="@dimen/_14sp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/capturePhoto1"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_width="@dimen/_45dp"
                android:layout_height="@dimen/_45dp"
                android:layout_marginLeft="@dimen/_20dp"
                android:background="@drawable/ic_camera_with_card"
                android:fontFamily="@font/gilroy_semibold"
                android:gravity="center"
                android:paddingTop="@dimen/_2dp"
                android:textAllCaps="false"
                android:textColor="@color/color_main"
                android:textSize="@dimen/_14sp" />

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>



    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_marginTop="@dimen/_20dp"
        android:orientation="vertical"
        android:id="@+id/cameraLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="@dimen/_80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/gilroy_semibold"
            android:gravity="left"
            android:text="Photo 2"
            android:textColor="@color/back_text_colour"
            android:textSize="@dimen/_14sp" />

        <RelativeLayout
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_180dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/podImage2"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:visibility="gone"
                android:layout_centerInParent="true"/>

            <FrameLayout
                android:padding="@dimen/_5dp"
                android:id="@+id/container2"
                android:layout_height="match_parent"
                android:layout_width="match_parent">

                <androidx.camera.view.PreviewView
                    android:id="@+id/previewView2"
                    android:focusableInTouchMode="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </FrameLayout>


            <ProgressBar
                android:visibility="gone"
                android:id="@+id/progress2"
                android:layout_width="@dimen/_40dp"
                android:layout_height="@dimen/_40dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center" />

        </RelativeLayout>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/retakePhoto2"

                android:layout_marginTop="@dimen/_10dp"
                android:layout_width="@dimen/_45dp"
                android:layout_height="@dimen/_45dp"
                android:background="@drawable/rotate_arrow"
                android:fontFamily="@font/gilroy_semibold"
                android:gravity="center"
                android:paddingTop="@dimen/_2dp"
                android:visibility="visible"
                android:textAllCaps="false"
                android:textColor="@color/color_main"
                android:textSize="@dimen/_14sp" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/capturePhoto2"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_width="@dimen/_45dp"
                android:layout_height="@dimen/_45dp"
                android:layout_marginLeft="@dimen/_20dp"
                android:background="@drawable/ic_camera_with_card"
                android:fontFamily="@font/gilroy_semibold"
                android:gravity="center"
                android:paddingTop="@dimen/_2dp"
                android:textAllCaps="false"
                android:textColor="@color/color_main"
                android:textSize="@dimen/_14sp" />

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/submitButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_button_round_corner_5"
        android:fontFamily="@font/gilroy_semibold"
        android:gravity="center"
        android:layout_marginTop="@dimen/_20dp"
        android:paddingTop="@dimen/_2dp"
        android:text="@string/scr_lbl_submit"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sp" />

</androidx.appcompat.widget.LinearLayoutCompat>