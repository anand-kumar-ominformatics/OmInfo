<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_300dp"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:paddingBottom="@dimen/_6dp"
    android:paddingTop="@dimen/_12dp"
    android:paddingHorizontal="@dimen/_16dp"
    android:gravity="center"
    android:background="@drawable/shape_round_dialog"
    android:layout_marginTop="@dimen/_10dp"
    android:layout_marginHorizontal="@dimen/_10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:fontFamily="@font/gilroy_bold"
            android:gravity="left"
            android:text="@string/scr_lbl_cleaner_details_marathi"
            android:textColor="@color/color_main"
            android:textSize="@dimen/_16sp" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgCancel"
            android:layout_width="@dimen/_16dp"
            android:layout_height="@dimen/_16dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_close" />

    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:fontFamily="@font/gilroy_semibold"
        android:gravity="left"
        android:layout_marginTop="@dimen/_24dp"
        android:layout_marginHorizontal="@dimen/_28dp"
        android:text="Ravi Sharma"
        android:textColor="@color/back_text_colour"
        android:textSize="@dimen/_14sp" />

    <RelativeLayout
        android:id="@+id/layCaller1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/_12dp"
        android:layout_marginHorizontal="@dimen/_28dp"
        android:orientation="horizontal">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvNum1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/gilroy_semibold"
            android:gravity="center"
            android:text="+91 9090876756"
            android:textColor="@color/back_text_colour"
            android:textSize="@dimen/_14sp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_16dp"
            android:layout_height="@dimen/_16dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/_16dp"
            android:src="@drawable/ic_call" />


    </RelativeLayout>

    <View
        android:layout_width="@dimen/_54dp"
        android:layout_height="1.2dip"
        android:layout_marginTop="@dimen/_12dp"
        android:layout_marginHorizontal="@dimen/_28dp"
        android:layout_marginBottom="@dimen/_14dp"
        android:layout_gravity="left"
        android:background="@color/app_gray"/>


    <RelativeLayout
        android:id="@+id/layCaller2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginBottom="@dimen/_24dp"
        android:layout_marginTop="@dimen/_0dp"
        android:layout_marginHorizontal="@dimen/_28dp"
        android:orientation="horizontal">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvNum2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/gilroy_semibold"
            android:gravity="center"
            android:text="+91 9090876756"
            android:textColor="@color/back_text_colour"
            android:textSize="@dimen/_14sp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_16dp"
            android:layout_height="@dimen/_16dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/_16dp"
            android:src="@drawable/ic_call" />


    </RelativeLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/detailsButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40dp"
        android:layout_weight="1"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_button_round_corner_5"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:paddingTop="@dimen/_3dp"
        android:text="@string/scr_lbl_all_contacts"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sp" />

</LinearLayout>