<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_300dp"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:paddingBottom="@dimen/_6dp"
    android:paddingTop="@dimen/_12dp"
    android:paddingHorizontal="@dimen/_16dp"
    android:gravity="center"
    android:background="@drawable/shape_round_dialog"
    android:layout_marginTop="@dimen/_10dp"
    android:layout_marginHorizontal="@dimen/_10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:fontFamily="@font/gilroy_bold"
            android:gravity="left"
            android:text="@string/scr_lbl_cleaner_details_marathi"
            android:textColor="@color/color_main"
            android:textSize="@dimen/_16sp" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgCancel"
            android:layout_width="@dimen/_16dp"
            android:layout_height="@dimen/_16dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_close" />

    </RelativeLayout>

    <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginBottom="@dimen/_16dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.6"
        android:paddingVertical="@dimen/_10dp"
        android:paddingLeft="@dimen/_12dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvGadiNo"
                android:layout_width="@dimen/_50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/font_regular"
                android:text="क्लीनर"
                android:textColor="@color/back_text_colour"
                android:textSize="@dimen/_14sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvGadiNoColon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tvGadiNo"
                android:fontFamily="@font/font_regular"
                android:text=" : "
                android:textColor="@color/back_text_colour"
                android:textSize="@dimen/_14sp" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvGadiNoValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tvGadiNoColon"
                android:fontFamily="@font/gilroy_semibold"
                android:text="Ravi Sharma"
                android:textColor="@color/back_text_colour"
                android:textSize="@dimen/_14sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTrip"
                android:layout_width="@dimen/_50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/font_regular"
                android:text="@string/scr_lbl_contacts"
                android:textColor="@color/back_text_colour"
                android:textSize="@dimen/_14sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTripColon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_regular"
                android:text=" : "
                android:layout_toRightOf="@+id/tvTrip"
                android:textColor="@color/back_text_colour"
                android:textSize="@dimen/_14sp" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTripValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tvTripColon"
                android:fontFamily="@font/gilroy_semibold"
                android:text="+91 9666978456"
                android:textColor="@color/back_text_colour"
                android:textSize="@dimen/_14sp" />

        </RelativeLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2.4"
        android:paddingRight="@dimen/_20dp"
        android:paddingVertical="@dimen/_10dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/tvPrice"
            android:layout_width="@dimen/_24dp"
            android:layout_height="@dimen/_24dp"
            android:layout_gravity="right"
            android:src="@drawable/ic_call" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/detailsButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40dp"
        android:layout_weight="1"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_button_round_corner_5"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:paddingTop="@dimen/_3dp"
        android:text="@string/scr_lbl_all_contacts"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sp" />

</LinearLayout>