<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/toolbar_layout"
    android:background="@drawable/bg_dashboard"
    android:orientation="vertical">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/cl_mainlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_layout">

        <include layout="@layout/content_collapse_dashboard_header" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16dp"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvHello"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/_10dp"
                    android:fontFamily="@font/gilroy_semibold"
                    android:text="Hello"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_24sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvDriverName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvHello"
                    android:layout_gravity="left"
                    android:layout_marginBottom="@dimen/_10dp"
                    android:fontFamily="@font/gilroy_semibold"
                    android:text="Ram Singh !"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_24sp" />



                <androidx.cardview.widget.CardView
                    android:layout_below="@+id/tvDriverName"
                    android:id="@+id/cardOne"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_70dp"
                    android:layout_marginTop="@dimen/_18dp"
                    android:layout_marginBottom="@dimen/_3dp"
                    android:layout_weight="1"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:elevation="@dimen/_12dp"
                    app:cardCornerRadius="@dimen/_15dp"
                    app:cardElevation="@dimen/_3dp">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_70dp"
                        android:background="@color/color_blue_30"
                        android:orientation="vertical"
                        android:layout_gravity="right|center"
                        android:gravity="right|center"
                        android:paddingVertical="@dimen/_10dp"
                        android:paddingHorizontal="@dimen/_10dp">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                >

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvStart"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/font_regular"
                                    android:text="गाड़ी नं.  :  "
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_12sp" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvStarting"
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@+id/tvStart"
                                    android:fontFamily="@font/font_semibold"
                                    android:text="MH 04 CV 1234"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_12sp" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_weight="1"
                                android:paddingLeft="@dimen/_20dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                >

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvEnd"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/font_regular"
                                    android:text="क्लीनर  :  "
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_12sp" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvEnding"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@+id/tvEnd"
                                    android:fontFamily="@font/font_semibold"
                                    android:text="Ravi Sharma"
                                    android:gravity="end"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_12sp" />
                            </RelativeLayout>

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/font_semibold"
                                android:text="@string/scr_lbl_truck_details"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:layout_marginRight="@dimen/_18dp"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12sp" />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/font_semibold"
                                android:text="@string/scr_lbl_cleaner_details"
                                android:gravity="right"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12sp" />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </androidx.appcompat.widget.LinearLayoutCompat>



                </androidx.cardview.widget.CardView>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/layCardOne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cardOne"
                    android:layout_marginTop="@dimen/_12dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardKataChithi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_3dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="@dimen/_3dp"
                        android:layout_weight="1"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:elevation="@dimen/_12dp"
                        app:cardCornerRadius="@dimen/_15dp"
                        app:cardElevation="@dimen/_3dp">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:orientation="vertical"
                            android:paddingVertical="@dimen/_40dp"
                            >

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/_50dp"
                                android:layout_height="@dimen/_50dp"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:clickable="true"
                                android:src="@drawable/ic_kata_chitti" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_6dp"
                                android:fontFamily="@font/font_semibold"
                                android:text="कांटा चिट्ठी"
                                android:textColor="@color/back_text_colour"
                                android:textSize="@dimen/_12sp" />


                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="@dimen/_3dp"
                        android:layout_marginBottom="@dimen/_3dp"
                        android:layout_weight="1"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:elevation="@dimen/_12dp"
                        app:cardCornerRadius="@dimen/_15dp"
                        app:cardElevation="@dimen/_3dp">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:orientation="vertical"
                            android:paddingVertical="@dimen/_40dp"
                            >

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/_50dp"
                                android:layout_height="@dimen/_50dp"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:clickable="true"
                                android:src="@drawable/ic_driver_hisab" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_6dp"
                                android:fontFamily="@font/font_semibold"
                                android:text="ड्राइवर हिसाब"
                                android:textColor="@color/back_text_colour"
                                android:textSize="@dimen/_12sp" />


                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.cardview.widget.CardView>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layCardOne"
                    android:layout_marginTop="@dimen/_12dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_3dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="@dimen/_3dp"
                        android:layout_weight="1"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:elevation="@dimen/_12dp"
                        app:cardCornerRadius="@dimen/_15dp"
                        app:cardElevation="@dimen/_3dp">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:orientation="vertical"
                            android:paddingVertical="@dimen/_40dp"
                            >

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/_50dp"
                                android:layout_height="@dimen/_50dp"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:clickable="true"
                                android:src="@drawable/ic_purana_hisab" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_6dp"
                                android:fontFamily="@font/font_semibold"
                                android:text="पुराना हिसाब"
                                android:textColor="@color/back_text_colour"
                                android:textSize="@dimen/_12sp" />


                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="@dimen/_3dp"
                        android:layout_marginBottom="@dimen/_3dp"
                        android:layout_weight="1"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:elevation="@dimen/_12dp"
                        app:cardCornerRadius="@dimen/_15dp"
                        app:cardElevation="@dimen/_3dp">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:orientation="vertical"
                            android:paddingVertical="@dimen/_32dp"
                            >

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/_54dp"
                                android:layout_height="@dimen/_50dp"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:clickable="true"
                                android:src="@drawable/ic_eway_bill" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvScanCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textAlignment="center"
                                android:layout_marginTop="@dimen/_6dp"
                                android:fontFamily="@font/font_semibold"
                                android:text="इ-वे बिल \n( Eway Bill )"
                                android:textColor="@color/back_text_colour"
                                android:textSize="@dimen/_12sp" />


                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.cardview.widget.CardView>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.appcompat.widget.LinearLayoutCompat>