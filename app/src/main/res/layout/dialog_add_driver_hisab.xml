<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_300dp"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:paddingBottom="@dimen/_16dp"
    android:paddingTop="@dimen/_12dp"
    android:paddingHorizontal="@dimen/_16dp"
    android:gravity="center"
    android:background="@drawable/shape_round_dialog"
    android:layout_marginTop="@dimen/_10dp"
    android:layout_marginHorizontal="@dimen/_10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:fontFamily="@font/gilroy_bold"
            android:gravity="left"
            android:text="@string/scr_lbl_kharcha_add_kijiye"
            android:textColor="@color/color_main"
            android:textSize="@dimen/_16sp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgCancel"
            android:layout_width="@dimen/_16dp"
            android:layout_height="@dimen/_16dp"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_close" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_30dp"
        android:layout_marginTop="@dimen/_20dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDriverBhatta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/font_regular"
            android:gravity="center"
            android:text="क्या खर्चा"
            android:textColor="@color/back_text_colour"
            android:textSize="@dimen/_14sp" />


        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="@dimen/_120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/toggle_editext_color"
            android:fontFamily="@font/font_regular"
            android:hint="Enter"
            android:gravity="start"
            android:padding="10dp"
            android:inputType="numberDecimal"
            android:textSize="@dimen/_14sp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6dp"
        android:layout_marginHorizontal="@dimen/_30dp"
        android:layout_marginBottom="@dimen/_20dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/font_regular"
            android:gravity="center"
            android:layout_alignParentStart="true"
            android:text="@string/scr_lbl_kitna_kharcha"
            android:textColor="@color/back_text_colour"
            android:textSize="@dimen/_14sp" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etHisab"
            android:layout_width="@dimen/_120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/toggle_editext_color"
            android:fontFamily="@font/font_regular"
            android:gravity="start"
            android:hint="Enter"
            android:inputType="numberDecimal"
            android:padding="10dp"
            android:textSize="@dimen/_14sp" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/okayButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="@drawable/bg_button_round_corner_5"
            android:fontFamily="@font/gilroy_semibold"
            android:gravity="center"
            android:paddingTop="@dimen/_2dp"
            android:text="@string/scr_lbl_okay"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sp" />

    </LinearLayout>



</LinearLayout>