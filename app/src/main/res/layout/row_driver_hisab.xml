<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/layHeaderToolbar"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginHorizontal="@dimen/_16dp"
android:layout_marginBottom="@dimen/_10dp" android:layout_marginVertical="@dimen/_5dp"
android:gravity="center"
android:orientation="horizontal"
android:weightSum="2">

<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvHisabName"
        android:layout_width="@dimen/_85dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center"
        android:clickable="true"
        android:gravity="left"
        android:onClick="onClick"
        android:fontFamily="@font/gilroy_bold"
        android:paddingTop="@dimen/_5dp"
        android:text="कांटा चिट्ठी"
        android:textColor="@color/back_text_colour"
        android:textSize="@dimen/_16sp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_3dp"
        android:fontFamily="@font/gilroy_bold"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/_5dp"
        android:text=":"
        android:textColor="@color/back_text_colour"
        android:textSize="@dimen/_14sp" />

</androidx.appcompat.widget.LinearLayoutCompat>


<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="right">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etHisab"
        android:layout_width="@dimen/_120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/toggle_editext_color"
        android:fontFamily="@font/gilroy_regular"
        android:hint="₹ Enter Amount"
        android:inputType="numberDecimal"
        android:paddingVertical="4dp"
        android:text=""
        android:gravity="center"
        android:textSize="@dimen/_14sp" />


</RelativeLayout>

</androidx.appcompat.widget.LinearLayoutCompat>